<%= render :partial => 'layouts/form_error_list', :locals => {objeto: @produto} %>

<%= form_with(model: @produto, local: true) do |form| %>
  <div class="row">
    <div class="form-group col-md-6">
      <%= form.label :nome %>
      <%= form.text_field :nome, :class => "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :tipo_produto_id %>
      <%= form.select :tipo_produto_id, @tipo_produtos.collect {|p| [p.nome, p.id]}, {},
                      {:class => 'form-control'} %>
    </div>
    <div class="form-group col-md-12">
      <%= form.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
