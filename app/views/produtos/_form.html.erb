<% if @produto.errors.any? %>
  <div id="error_explanation">
    <h2>Não foi possível completar a ação. Os seguintes erros foram encontrados:</h2>
    <ul>
      <% @produto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @produto do |f| %>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :nome %><br>
      <%= f.text_field :nome, :class => "form-control" %><br>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :tipo %><br>
      <%= f.text_field :tipo, :class => "form-control" %><br>
    </div>
    <div class="form-group col-md-12">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
