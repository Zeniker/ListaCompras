<div class="row secao-botoes">
  <div class="col-md-12">
    <a href="<%= new_pedido_path %>"><button class="btn btn-success fr" role="button" id="save_button">Incluir</button></a>
  </div>
</div>

<% if @pedidos.empty? %>
  <div class="alert alert-warning">Não há nenhum pedido cadastrado</div>
<% else %>
  <div class="table-responsive-sm">
    <table class="table table-light">
      <thead>
      <tr>
        <th class="col-md-4">Produto</th>
        <th class="col-md-3">Quantidade</th>
        <th class="col-md-3">Solicitante</th>
        <th class="col-md-2 text-center" colspan="2">Ação</th>
      </tr>
      </thead>
      <tbody>
      <% @pedidos.each do |pedido| %>
        <tr>
          <td class="col-md-4"><%= pedido.produto.nome %></td>
          <td class="col-md-3"><%= "#{pedido.quantidade} #{pedido.unidade_medida.sigla}" %></td>
          <td class="col-md-3"><%= pedido.usuario.nome %></td>
          <td class="col-md-1"><%= link_to edit_image_tag, edit_pedido_path(pedido) %></td>
          <td class="col-md-1"><%= link_to delete_image_tag, confirm_delete_pedido_path(pedido) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>