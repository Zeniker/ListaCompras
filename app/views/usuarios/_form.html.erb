<% if @usuario.errors.any? %>
  <div class="error-explanation">
    <div class="alert alert-danger">Não foi possível completar a ação. Os seguintes erros foram encontrados:</div>
    <ul class="list-group">
      <% @usuario.errors.full_messages.each do |message| %>
        <li class="list-group-item list-group-item-danger"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @usuario do |f| %>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :nome %>
      <%= f.text_field :nome, :class => "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :login %>
      <%= f.text_field :login, :class => "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <label for="usuario_password">Senha</label>
      <%= f.password_field :password, :class => "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <label for="usuario_password">Confirmação de Senha</label>
      <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>
    <div class="form-group col-md-12">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
