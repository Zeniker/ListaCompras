<div class="cabecalho">
  <span>Início de Sessão</span>
</div>

<%= form_for @user_session do |f| %>
  <div class="row">
    <div class="form-group col-md-12">
      <%= f.label :login %>
      <%= f.text_field :login, :class => "form-control" %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label :password %>
      <%= f.password_field :password, :class => "form-control" %>
    </div>
    <div class="form-group col-md-12">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
